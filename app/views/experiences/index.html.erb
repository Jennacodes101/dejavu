<div class="screen">
  <div class="container pt-4">
    <div class="row">
      <div class="col-6">
        <%= link_to 'New Experience', new_experience_path, class:"" %>
      </div>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="cards"> <%# grid of cards %>
          <% @experiences.each do |experience|%>
            <%= render 'shared/card_experience', experience: experience %>
          <% end %>
        </div>
      </div>
      <div class="col-6">
        <div class="map">
          <%= render 'shared/map' %>
        </div>
      </div>
    </div>
  </div>
</div>
