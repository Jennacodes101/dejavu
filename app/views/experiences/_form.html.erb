
<%= simple_form_for experience do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :exp_type, collection: ['place', 'experience'], prompt: 'Choose a recommendation type', class: 'expSelect', default: 'place' %>
  <%= f.input :subtype, collection: ['museum','food', 'landmark', 'nightlife', 'nature'], prompt: 'choose an experience sub type', disabled: false, id: 'subPlaces'%>
  <!-- <%= f.input :subtype, collection: ['classes', 'outdoor activity', 'service', 'excursion'], prompt: 'choose a places sub type', disabled: true, id: 'subExp' %> -->
  <%= f.input :country, as: :string %>
  <%= f.input :city %>


  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.button :submit, class: "btn btn-primary rounded" %>


<% end %>

