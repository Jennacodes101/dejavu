<div class="navbar fixed-top navbar-expand-sm navbar-lewagon <%= yield(:navbar_class) %>">
  <div class="container flex align-items-center">
    <div class="navbar-logo col-md-4">
      <h1> <%= link_to "DEJAVU", root_path, class: "dropdown-item" %> </h1>
    </div>

    <div class="navbar-title col-md-4 d-flex align-items-center">
      <h1> </h1>
    </div>

    <div class="collapse navbar-collapse col-md-4" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Explore",experiences_path, class: "nav-link bordered" %>
          </li>
          <li class="nav-item dropdown active">
            <div class="dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, height: 48, width: 48, radius: "max",  crop: :fill, fetch_format: :png %>
              <% else %>
                <%= image_tag("user_avatar.png", class: "avatar")  %>
              <% end %>
            </div>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Feed", feed_path, class: "dropdown-item" %>
              <%= link_to "Explore", experiences_path, class: "dropdown-item" %>
              <%= link_to "Profile", profile_path(current_user.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn btn-login" %>
          </li>
          <li class="nav-item">
            <%= link_to "Join", new_user_registration_path, class: "btn btn-join" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
