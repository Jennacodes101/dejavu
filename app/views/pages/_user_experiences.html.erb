
<div class="container border-sunk">
  <div class="row my-1">
    <div class="container-fluid py-1">
    <div class="d-flex">
      <h2 class="bg-exp">Experiences created by you</h2>
    </div>
      <div class="d-flex flex-row flex-nowrap overflow-auto">
        <% @user_experiences.each do |experience| %>
          <div class="co-12 col-sm-6 col-md-4">
            <%= link_to experience_path(experience), class: "text-decoration-none" do %>
              <div class="card" style="width: 18rem;">
                <% if experience.photo.attached? %>
                  <div>
                    <%= cl_image_tag experience.photo.key, crop: :fill, width: 300, height: 300, :format => :png%>
                  </div>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= experience.name %></h5>
                  <p class="card-text"></p>
                  <a href="#" class="btn btn-primary-small">edit</a>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
