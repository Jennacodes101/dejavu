<div class="container border-sunk">
  <div class="row my-1">
    <div class="container-fluid py-1">
      <div class="d-flex">
        <% if @access == 'owner'%>
          <h5 class="pt-1 text-muted bg-exp"> Your experiences: </h5>
        <% else %>
          <h5 class="pt-1 text-muted bg-exp"><%= "#{@profile_user.first_name}'s experiences" %></h5>
        <% end %>
      </div>
      <div class="d-flex flex-row flex-nowrap overflow-auto">
        <% @user_experiences.each do |experience| %>
          <div style="padding: 10px">
            <div class="card card-experience">
              <% if experience.photo.attached? %>
                <%= cl_image_tag experience.photo.key, height: 302, width: 280,  crop: :fill, fetch_format: :png %>
              <% else %>
                <%= image_tag("placeholder_exp.png", width: 280, height: 302) %>
              <% end  %>
              <div class="card-experience-infos">
                <div >
                  <h1><%= link_to experience.name, experience_path(experience.id) %></h1>
                  <h2><%= experience.city %>, <%= experience.country %></h2>
                  <h3> #<%= experience.exp_type %></h3>
                </div>
                <div class="card-experience-edit">
                  <%= link_to '...', edit_experience_path %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
